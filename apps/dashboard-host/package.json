{
  "name": "@eink-dashboard/dashboard-host",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:esbuild:host": "esbuild src/bin/host.ts --bundle --platform=node --outfile=dist/bin/host.js",
    "build:esbuild:snap": "esbuild src/bin/snap.ts --bundle --platform=node --outfile=dist/bin/snap.js",
    "format": "prettier --write .",
    "build": "wireit",
    "start": "wireit",
    "typecheck": "wireit"
  },
  "wireit": {
    "copy:webapp": {
      "dependencies": [
        "../web-dashboard:build"
      ],
      "files": [
        "../web-dashboard/.next/standalone"
      ],
      "output": [
        "dist/web-dashboard/**"
      ],
      "command": "rm -rf dist/web-dashboard || true && mkdir -p dist && mv ../web-dashboard/.next/standalone ./dist/web-dashboard/ && ls -al ./dist/web-dashboard"
    },
    "start": {
      "dependencies": [
        "build"
      ],
      "command": "node ./dist/bin/host.js"
    },
    "typecheck": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "build": {
      "dependencies": [
        "typecheck",
        "copy:webapp",
        "build:esbuild:host",
        "build:esbuild:snap"
      ],
      "command": "echo ok"
    }
  },
  "dependencies": {
    "@eink-dashboard/common": "workspace:*",
    "@types/wait-on": "5.3.4",
    "capture-website": "^4.1.0",
    "execa": "^5",
    "serve-handler": "6.1.5",
    "ts-pattern": "5.5.0",
    "wait-on": "8.0.1"
  },
  "devDependencies": {
    "@types/finalhandler": "1.2.3",
    "@types/serve-handler": "6.1.4",
    "esbuild": "^0.23.1",
    "npm-run-all2": "6.2.3",
    "puppeteer": "23.3.1",
    "tsx": "^4.19.1",
    "typescript": "5.6.2"
  },
  "pnpm": {
    "overrides": {
      "puppeteer": "23.3.1"
    }
  }
}
