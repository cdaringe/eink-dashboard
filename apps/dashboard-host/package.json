{
  "name": "@eink-dashboard/dashboard-host",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:esbuild:host": "esbuild src/bin/host.ts --bundle --platform=node --outfile=dist/bin/host.js",
    "build:esbuild:snap": "esbuild src/bin/snap.ts --bundle --platform=node --outfile=dist/bin/snap.js",
    "build": "wireit",
    "dev": "wireit"
  },
  "wireit": {
    "copy:webapp": {
      "dependencies": [
        "../web-dashboard:build"
      ],
      "files": [
        "../web-dashboard/dist"
      ],
      "output": [
        "dist/web-dashboard/**"
      ],
      "command": "mkdir -p dist && cp -r ../web-dashboard/dist/ ./dist/web-dashboard && ls -al ./dist/web-dashboard"
    },
    "dev": {
      "dependencies": [
        "build"
      ],
      "command": "tsx src/bin/host.ts"
    },
    "typecheck": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "build": {
      "dependencies": [
        "typecheck",
        "copy:webapp",
        "build:esbuild:host",
        "build:esbuild:snap"
      ],
      "command": "echo ok"
    }
  },
  "dependencies": {
    "@eink-dashboard/common": "workspace:*",
    "capture-website": "^4.1.0",
    "puppeteer": "21.11.0",
    "serve-handler": "6.1.5"
  },
  "devDependencies": {
    "@types/finalhandler": "1.2.3",
    "@types/serve-handler": "6.1.4",
    "esbuild": "^0.23.1",
    "npm-run-all2": "6.2.3",
    "tsx": "^4.19.1",
    "typescript": "5.6.2"
  },
  "pnpm": {
    "overrides": {
      "puppeteer": "23.3.1"
    }
  }
}
