{
  "name": "@eink-dashboard/dashboard-host",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:esbuild": "esbuild src/bin/host.ts --bundle --platform=node --outfile=dist/bundle.js",
    "build:compile": "tsc",
    "build": "npm-run-all2 build:compile build:esbuild",
    "prebuild": "rm -rf dist",
    "dev": "tsx src/bin/host.ts",
    "snapshot": "tsx src/bin/snap.ts",
    "start": "node dist/bundle.js"
  },
  "dependencies": {
    "@eink-dashboard/common": "workspace:*",
    "capture-website": "^4.1.0",
    "finalhandler": "1.3.1",
    "serve-static": "1.16.2"
  },
  "devDependencies": {
    "@types/finalhandler": "1.2.3",
    "@types/serve-static": "1.15.7",
    "esbuild": "^0.23.1",
    "npm-run-all2": "6.2.3",
    "tsx": "^4.19.1",
    "typescript": "5.6.2"
  }
}
